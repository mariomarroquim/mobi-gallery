	<h1>Fun, Curiosities</h1>

  <%= render :partial => "home_button" -%>

	<%= link_to "Next",
            	{:action => :fun_curiosities, :file => @next_file},
            	"data-prefetch" => true,
            	"data-theme"=>"e",
            	"data-icon" => "arrow-r",
            	:class => "ui-btn-right" -%>
</div>

<div data-role="content">
  <%= flashes -%>

  <div class="picture">
    <%= image_tag "fun_curiosities/#{@current_file}" -%>
